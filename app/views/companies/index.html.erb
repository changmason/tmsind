<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Branch name</th>
      <th>Telephone</th>
      <th>Address</th>
      <th>Email</th>
      <th>Business hours</th>
      <th>Charges</th>
      <th>Main type</th>
      <th>Sub type</th>
      <th>Company no</th>
      <th>Lat lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.branch_name %></td>
        <td><%= company.telephone %></td>
        <td><%= company.address %></td>
        <td><%= company.email %></td>
        <td><%= company.business_hours %></td>
        <td><%= company.charges %></td>
        <td><%= company.main_type %></td>
        <td><%= company.sub_type %></td>
        <td><%= company.company_no %></td>
        <td><%= company.lat_lng %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

